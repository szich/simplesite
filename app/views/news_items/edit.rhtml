<h1>Editing a News Item</h1>

<%= error_messages_for :news_item %>

<% form_for(:news_item, :url => news_item_path(@news_item), :html => { :method => :put }) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>


  <p>
    <%= submit_tag "Update" %>
  </p>
<% end %>

<%= link_to 'Show', news_item_path(@news_item) %> |
<%= link_to 'Back', news_items_path %>