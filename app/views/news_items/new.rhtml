<h1>New News Item</h1>

<%= error_messages_for :news_item %>

<% form_for(:news_item, :url => news_items_path) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= submit_tag "Create" %>
  </p>
<% end %>

<%= link_to 'Back', news_items_path %>