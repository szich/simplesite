<h1>Editing My Account</h1>

<%= error_messages_for :user %>

<% form_for(:user, :url => my_account_path(@user), :html => { :method => :put }) do |f| %>
	<%= render :partial => '/users/form', :locals => { :f => f } %>	
  <p style="margin-top: 10px;"><%= submit_tag "Update" %></p>
<% end %>

<%= link_to 'Back', '/my_account' %>