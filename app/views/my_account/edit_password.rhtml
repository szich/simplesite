<h1>Login Preferences</h1>

<%= error_messages_for :user %>
<% form_for :user, :url => '/my_account/update_password' do |f| -%>

<p>If you leave both the password fields blank, your password will not be updated.</p>
<%= render :partial => '/users/login_preferences', :locals => {:f => f} %>

<p><%= submit_tag 'Update' %> | <%= link_to 'Back', '/my_account' %></p>
<% end -%>